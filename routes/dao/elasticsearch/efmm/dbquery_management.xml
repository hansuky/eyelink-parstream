    ]]></query>
    <query id='selectSortList'><![CDATA[
      {
        "index" : #INDEX#,
        "type" : #TYPE#,
        "body" : {
          "size" : 1000,
          "sort" : { #SORT#: { "order" : "asc" } },
          "query" : { "match_all" : { } }
        }
      }
    ]]></query>
    <query id='selectListById'><![CDATA[
      {
        "index" : #INDEX#,
        "type" : #TYPE#,
        "body" : {
          "size" : 1000,
          "query" : {
            "bool": {
              "must" : [
                { "match": { #ID# : #VALUE#}}
              ]
            }
          }
        }
      }
    ]]></query>
