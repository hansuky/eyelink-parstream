<?xml version="1.0"?>
<queryList>
  <management>
    <query id='selectRecipeList'><![CDATA[
      {
        "index" : #INDEX#,
        "type"  : #TYPE#,
        "body" : {
          "size": 100000,
          "_source" : "data",
          "sort": { "dtTransmitted" : "desc" },
          "query" :
          {
           "match" : {
             "sensorType" : {
                "query" :  "recipe",
                "operator" : "and"
              }
            }
          }
        }
      }
    ]]></query>
    <query id='selectCheckId'><![CDATA[
      {
        "index" : "efmm_management",
        "type"  : "management",
        "body" : {
          "_source" : [ "data" ],
          "query" : {
            "bool" : {
              "must": [
                {"term" : {"flag" : "recipe"}},
                {"term" : {"id" : #ID#}}
              ]
            }
          }
        }
      }
    ]]></query>
    <query id='insertRecipe'><![CDATA[
      {
        "index" : "efmm_management",
        "type" : "management",
        "body" : {
          "flag" : "recipe",
          "step" : #step#,
          "cid" : #cid#,
          "id" : #id#,
          "type" : #type#,
          "name" : #name#,
          "description" : #description#,
          "unit" : #unit#,
          "stepno" : #stepno#,
          "tagname" : #tagname#,
          "datatype" : #datatype#,
          "datasize" : #datasize#,
          "datavalue" : #datavalue#,
          "lastupdate" : "now"
        }
      }
    ]]></query>
  </management>
</queryList>
