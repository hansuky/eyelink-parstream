<?xml version="1.0"?>
<queryList>
  <timeseries>
    <query id='selectMachineList'><![CDATA[
      {
        "index" : [##index##],
        "type"  : #type#,
        "body" : {          
          "size" : 0,          
          "aggs": {
            "flag": {
              "terms": {
                "field": "flag.keyword",
                "order" : { "_term" : "asc" }
              },
              "aggs": {
                "cid": {
                  "terms": {
                    "field": "cid.keyword",
                    "order" : { "_term" : "asc" }
                  }
                }
              }
            }
          }
        }
      }
    ]]></query>
    <query id='selectTimeseriesData'><![CDATA[
      {
        "index" : #index#,
        "type"  : #type#,
        "body" : {
          "size" : 100000,
          "sort": [           
            { "dtTransmitted": { "order": "asc" } },
            { "cid": { "order": "asc" } } ],             
          "query": {
            "bool": {
              "filter" : [
                { "range" : { "dtTransmitted" : { "gte" : #gte#, "lte" : #lte# }}},
                { "bool" : #status# }]
              
            }
          }
        }
      }
    ]]></query>
    <query id='selectTimeRange'><![CDATA[
      {
        "index" : [##index##],
        "type"  : #type#,
        "body" : {
          "size" : 0,
          "sort" : [{ "dtTransmitted" : "asc" }, { "cid" : "asc" }],
          "aggs" : {
            "cid" : {
              "terms" : { "field" : "cid" },
              "aggs" : {
                "range": {
                  "date_range" : #range#,
                  "aggs" : {
                    "date_max" : {
                      "max" : {
                          "field" : "dtTransmitted"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    ]]></query>
    <query id='selectDetailData'><![CDATA[
      {
        "index" : [##index##],
        "type"  : #type#,
        "body" : {
          "size" : 10000,
          "sort": [
            { "dtTransmitted": { "order": "asc" } },
            { "cid": { "order": "asc" } } ],
          "query": {
            "bool": #term#
          }
        }
      }
    ]]></query>
  </timeseries>
</queryList>