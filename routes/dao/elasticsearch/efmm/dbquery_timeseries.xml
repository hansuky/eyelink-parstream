<?xml version="1.0"?>
<queryList>
  <timeseries>
    <query id='selectMachineList'><![CDATA[
      {
        "index" : [##index##],
        "type"  : #type#,
        "body" : {          
          "size" : 0,          
          "aggs": {
            "flag": {
              "terms": {
                "field": "flag.keyword",
                "order" : { "_term" : "asc" }
              },
              "aggs": {
                "cid": {
                  "terms": {
                    "field": "cid.keyword",
                    "order" : { "_term" : "asc" }
                  }
                }
              }
            }
          }
        }
      }
    ]]></query>
    <query id='selectTimeseriesData'><![CDATA[
      {
        "index" : [##index##],
        "type"  : #type#,
        "body" : {
          "size" : 10000,
          "sort": [           
            { "dtTransmitted": { "order": "asc" } },
            { "cid": { "order": "asc" } } ],             
          "query": {
            "bool": {
              "filter" : {
                "ranges" : { "from" : #gte#, "to" : #lte# }
              }
            }
          }
        }
      }
    ]]></query>
  </timeseries>
</queryList>