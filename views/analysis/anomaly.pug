extends ../layout-type01
block style
  link(rel='stylesheet', href='/assets/leaflet/dc.css')
  link(rel='stylesheet', href='/stylesheets/style.css')
  link(rel='stylesheet', href='/scripts/d3_timeseries.css')
  link(rel='stylesheet', type='text/css', href='/assets/annie/css/style.css')
  style.    
    path { 
        stroke-width: 2;
        fill: none;
    }
    .line {
      fill: none;      
    }

    .area {
        stroke-width: 1;
      }
    text {
      font-size: 0.5rem;
    }
   .legend text {   
        fill: black;
        font-weight: bold;
        font-size: 1rem;
    }
    .axis path,
    .axis line {
        fill: none;
        stroke: grey;
        stroke-width: 1;
        shape-rendering: crispEdges;
    } 
    .legend .legend-bg {
        fill: rgba(0, 0, 0, 0.5);
        stroke: rgba(0, 0, 0, 0.5);
        opacity: 0.1;
      }
    div.tooltip { 
      position: absolute;     
      text-align: center;     
      width: 60px;          
      height: auto;         
      padding: 2px;       
      font: 12px sans-serif;    
      background: lightsteelblue; 
      border: 0px;    
      border-radius: 8px;     
      pointer-events: none;     
    }
    .area.inner,
    .legend .inner {
        fill: rgba(230, 230, 255, 0.8);
        stroke: rgba(216, 216, 255, 0.8);
     }
     .compareline,
      .legend .compareline {
        fill: none;
        stroke: skyblue;
        stroke-width: 3;
      }
      .valueline,
      .legend .valueline {
        fill: none;
        stroke: gray;
        stroke-width: 3;
      }
      .live-line,
      .legend .live-line {
        fill: none;
        stroke: red;
        stroke-width: 3;
      }
block script
  script(type='text/javascript', src='/assets/leaflet/d3.js')
  script(src='/assets/annie/js/vue.min.js')
  script(type='text/javascript', src='/assets/annie/js/colorbrewer.js')
  script(type='text/javascript', src="/scripts/util.js")
  script(src='/scripts/analysis_anomaly.js')  
  script.
    $(document).ready(function(e) {      
      getData();            
    });
