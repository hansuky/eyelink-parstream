extends ../efmm-layout01
block style
  link(rel='stylesheet', href='/efmm/css/chart_style.css')
  link(rel='stylesheet', href='/efmm/css/analysis_anomaly.css')
  link(rel='stylesheet', href='/efmm/assets/css/dc.css')
block script
  script(type='text/javascript', src='/efmm/assets/scripts/d3_dc.js')
  script(type='text/javascript', src='/efmm/assets/scripts/colorbrewer.js')
  script(src='/efmm/assets/scripts/vue.min.js')
  script(type='text/javascript', src="/common/scripts/util.js")
  script(type='text/javascript', src='/efmm/scripts/analysis_anomaly.js')
block content
  .container-fluid
    .page-content
      .breadcrumbs
        h1 Anomaly
        ol.breadcrumb
          li
            a(href='/dashboard') Home
          li
            a(href='#') Analysis
          li.active Anomaly

      - const steps = [{value: 'notching'}, {value: 'stacking'}]
      - const machines = [{value: '100'}, {value: '200'}]

      div#selections
        select#step
          each step in steps
            option(value=(step.value)) #{step.value}
        select#machine
          each machine in machines
            option(value=(machine.value)) #{machine.value}

      .row
        .col-md-12
          .portlet.light.bordered
            .portlet-title
              .caption.font-dark
                span.caption-subject.bold.uppercase Anomaly Chart
                span.caption-helper  by Overall OEE
            .portlet-body
              .chart(style='height:400px;')
                #overall_oee
      .row
        .col-md-12
          .portlet.light.bordered
            .portlet-title
              .caption.font-dark
                span.caption-subject.bold.uppercase Anomaly Chart
                span.caption-helper  by Availability
            .portlet-body
              .chart(style='height:400px;')
                #availability
      .row
        .col-md-12
          .portlet.light.bordered
            .portlet-title
              .caption.font-dark
                span.caption-subject.bold.uppercase Anomaly Chart
                span.caption-helper  by Performance
            .portlet-body
              .chart(style='height:400px;')
                #performance
      .row
        .col-md-12
          .portlet.light.bordered
            .portlet-title
              .caption.font-dark
                span.caption-subject.bold.uppercase Anomaly Chart
                span.caption-helper  by Quality
            .portlet-body
              .chart(style='height:400px;')
                #quality
