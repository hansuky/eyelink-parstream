  script(type='text/javascript', src="/efmm/scripts/dashboard_info.js")
block content
  .container-fluid
    .page-content
      .breadcrumbs
        .col-md-7
          h1 Info
        .col-md-2  
          input#refresh(type='checkbox', data-toggle='toggle', value='false', data-on="Refresh", data-off="Stop", name='refresh')
        .col-md-3
          ol.breadcrumb
            li
              a(href='#') Home
            li
              a(href='#') Dashboard
            li.active Dashboard
      .row
        .col-md-12
          .portlet.light.bordered
            .portlet-title
              .caption.font-dark
                span.caption-subject.bold.uppercase Detail Info
              .tools
                a.collapse(href='javascript:;')
                a.config(href='#portlet-config', data-toggle='modal')
                a.reload(href='javascript:;')
                a.fullscreen(href='javascript:;')
                a.remove(href='javascript:;')
            .portlet-body                            
              .chart(style='height:auto;')
                .col-md-4
                  .raw                    
                    #gage
                    #modal-alarm.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
                      .modal-dialog.modal-lg
                        .modal-content
                          .modal-header
                            button.close(type='button', data-dismiss='modal', aria-label='Close')
                              span(aria-hidden='true') Ã—
                            h4#myModalLabel.modal-title Alarm History
                          .modal-body
                            #mbody
                          .modal-footer
                            button.btn.btn-default(type='button', data-dismiss='modal') Close                    
                    #data                  
                .col-md-8
                  #composed