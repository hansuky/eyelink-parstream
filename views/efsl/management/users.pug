extends ../layout-type01
block style  
  link(rel='stylesheet', type='text/css', href='/common/assets/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css')  
block script
  script(type='text/javascript', src='/common/assets/plugins/datatables/media/js/jquery.dataTables.min.js')
  script(type='text/javascript', src='/common/assets/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js')
  script(src='/common/assets/scripts/page/table-managed.js')
  script(type='text/javascript', src="/common/scripts/util.js")
  script(type='text/javascript', src='/efsl/scripts/management_user.js') 
block content  
  .container-fluid
    .page-content
      .breadcrumbs
        h1 Users
        ol.breadcrumb
          li
            a(href='#') Home
          li
            a(href='#') Management
          li.active Users
      .row
        .col-md-12
          .portlet.light
            .portlet-title
              .caption
                span.caption-subject.bold.uppercase.font-green-haze User List
                span.caption-helper  Detail information about users
              .tools
                button.btn.btn-default.blue(type='button', onclick="location.href='/management/users/addUser'") Add
            .portlet-body.form
              table#sample_2.table.table-striped.table-bordered.table-hover(style='text-align:center;')
                thead
                  tr
                    th(style='text-align:center;') 
                    th(style='text-align:center;')  User ID
                    th(style='text-align:center;')  Name
                    th(style='text-align:center;')  Position
                    th(style='text-align:center;')  Tel
                    th(style='text-align:center;')  Mobile
                    th(style='text-align:center;')  Email  
                    th(style='text-align:center;')  Use                  
                    th(style='text-align:center;')  Reg Date                    
                    th(style='text-align:center;')  Edit &amp; Delete
                tbody
                  each user in users
                    tr.odd.gradeX
                      td                        
                      td  #{user._source.user_id}
                      td  #{user._source.user_name}
                      td  #{user._source.position}
                      td  #{user._source.tel}
                      td  #{user._source.mobile}
                      td  #{user._source.user_email}
                      td  #{user._source.use}
                      td  #{user._source.reg_date}                      
                      td
                        a.btn.default.btn-xs.balck(href='/management/users/'+user._source.user_id)
                          i.fa.fa-edit
                          |  Edit    
                        a.btn.default.btn-xs.balck(flag='deleteUser', id=''+user._id, userid=''+user._source.user_id)
                          i.fa.fa-trash-o
                          |  Delete          
              